<head>
  <title>HiremeApp</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>

<body background="nyc2.jpg">

	<p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
	
	<% if user_signed_in? %>
		<p class="user">You are signed in as <%= current_user.email %></p>
		<%= link_to "Log out", destroy_user_session_path, method: :delete %>
	<% else %>
		<%- if controller_name != 'sessions' %>
  			<%= link_to "Sign in", new_session_path(User) %><br />
		<% end -%>
  		<%= link_to "Sign up", new_registration_path(User) %><br />
  	
  		<div class="jumbotron">
  		<div class="container">
		  <center>
		  <h1>Welcome to HireMe!</h1>
  		  <p>Showcase your professional experience, work samples, and discover opportunities.</p>
  		  <p>Get started with your free account.</p>
		  </center>
		</div>
		</div>
	<% end -%>
	<%= yield %>

</body>

