<h1 class="list">Experience</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>

    <table class="table table-striped">
    <% @experiences.each do |experience| %>
      <tr>
        <td><%= experience.title %></td>
        <td><%= experience.content %></td>
        <td><%= link_to 'Show', experience_path(experience) %></td>
        <td><%= link_to 'Edit', edit_experience_path(experience) %></td>
        <td><%= link_to 'Destroy', experience, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <tr>
      <td></td>
      <td>
        <ul>
          <% experience.notes.each do |note| %>
          <li><%= link_to note.topic, note.content, target:"_blank" %></li>
          <% end %>
        </ul>
      </td>
    </tr>
    <% end %>
    </table>


  </tbody>
</table>

<%= link_to 'New Experience', new_experience_path %>

